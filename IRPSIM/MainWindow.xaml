<Window x:Class="IRPSIM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:IRPSIM.ViewModels"
        xmlns:view="clr-namespace:IRPSIM.Views"
        Title="IRPSIM" Height="350" Width="525">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>    
    <DockPanel>
        <Menu Name="mainMenu" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Open _Project..." Command="{Binding ProjectOpenCommand}"/>
                <MenuItem Header="Open _File..." Command="{Binding FileOpenCommand}"/>
                <Separator/>
                <MenuItem Header="_Close"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Project">
                <MenuItem Header="_Run Simulation" Command="{Binding RunSimulationCommand}"/>
             </MenuItem>
            <MenuItem Header="_View"/>
        </Menu>
        <StatusBar Name="statusBar" DockPanel.Dock="Bottom">
            Test
        </StatusBar>
        <view:NotifyView x:Name="notifyView" DockPanel.Dock="Bottom">
        </view:NotifyView>
        <Grid DockPanel.Dock="Bottom">
             <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <view:ObjectView x:Name="objectView" Grid.Column="0" />
            <GridSplitter Grid.Column="0" Width="5"/>
            <view:FilesView x:Name="filesView" Grid.Column="1" DataContext="{Binding}"/>
        </Grid>
    </DockPanel>
</Window>
